config("csslayout_config") {
  include_dirs = [ "CSSLayout" ]
}

source_set("csslayout") {
  sources = [
    "CSSLayout/CSSLayout-internal.h",
    "CSSLayout/CSSLayout.c",
    "CSSLayout/CSSLayout.h",
    "CSSLayout/CSSMacros.h",
    "CSSLayout/CSSNodeList.c",
    "CSSLayout/CSSNodeList.h",
  ]

  if (is_win) {
    cflags = [
      "/wd4005",  # 'isnan': macro redefinition
      "/wd4267",  # conversion from 'size_t' to 'const unsigned long'
    ]
  }

  public_configs = [ ":csslayout_config" ]
}
